<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/passedclassnamedatabase"
        android:layout_width="299dp"
        android:layout_height="57dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:textColor="@color/colorPrimaryDark"
        android:text="wwww"
        android:textAllCaps="true"
        android:textSize="35dp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309"/>

    <EditText
        android:id="@+id/studentNamedatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="2dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/coursename"
        android:ems="10"

        android:hint="Student Name"
        android:inputType="text"
        android:padding="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAllCaps="true"
        android:textColorHint="#2327E7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.623" />

    <EditText
        android:id="@+id/mcneeseiddatabase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeMaxTextSize="2dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/coursename"
        android:ems="10"
        android:hint="Student ID"
        android:inputType="text"
        android:padding="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAllCaps="true"
        android:textColorHint="#2327E7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"

        app:layout_constraintBottom_toTopOf="@+id/passedclassnamedatabase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mcneesename" />

    <Button
        android:id="@+id/addStudentdatabase"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignLeft="@+id/studentNamedatabase"
        android:layout_alignBottom="@+id/studentNamedatabase"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circlew"
        android:onClick="addStudentDatabase"
        android:text="Add"
        android:textAllCaps="false"

        android:textColor="#1818DD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.763" />

    <Button
        android:id="@+id/deleteStudentdatabase"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignLeft="@+id/studentNamedatabase"
        android:layout_alignBottom="@+id/addStudentdatabase"
        android:layout_marginStart="16dp"
        android:background="@drawable/circlew"
        android:onClick="deleteStudentDatabase"
        android:text="Delete"
        android:textAllCaps="false"

        android:textColor="#1818DD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.763" />

    <Button
        android:id="@+id/updateStudentdatabase"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignLeft="@+id/studentNamedatabase"
        android:layout_alignBottom="@+id/addStudentdatabase"
        android:layout_marginStart="16dp"
        android:background="@drawable/circlew"
        android:onClick="updateStudentDatabase"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="#1818DD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913" />

    <Button
        android:id="@+id/view_items_screen"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_alignLeft="@+id/studentNamedatabase"
        android:layout_alignBottom="@+id/addStudentdatabase"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circlew"
        android:text="View Database"
        android:textAllCaps="false"
        android:textColor="#1818DD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.856"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913" />
</androidx.constraintlayout.widget.ConstraintLayout>
